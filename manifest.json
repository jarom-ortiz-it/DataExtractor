{
  "manifest_version": 3,
  "name": "Data Extractor",
  "version": "1.0",
  "description": "Extracts data from Insightly CRM and SunRun Partner Portal pages",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "sidePanel",
    "tabs"
  ],
  "action": {
    "default_title": "Data Extractor",
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidebar/sidebar.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.insightly.com/*",
        "*://*.sunrun.my.site.com/*"
      ],
      "js": ["content_scripts/extractor.js"]
    }
  ],
  "background": {
    "service_worker": "background_scripts/background.js"
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}